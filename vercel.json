{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "buildCommand": "pnpm run build",
  "cleanUrls": true,
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/favicon.ico$", "dest": "/spa/favicon.ico" },
    { "src": "^/(?:assets|images|robots.txt|placeholder.svg|favicon.png|favicon.ico)/(.*)", "dest": "/spa/$0" },
    { "src": "^/$", "dest": "/spa/index.html" },
    { "src": "^/(.*)", "dest": "/spa/index.html" }
  ]
}
